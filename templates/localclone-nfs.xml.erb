<!DOCTYPE localclone SYSTEM "<%= dtd %>">
<localclone name="localclone2disk" source="disk" destination="disk">
  <cluster name="<%= name %>" sourcesuffix="" destsuffix="C"/>
  <sourcedisks>
     <bootdisk name="<%= sourcebootdisk %>/boot" fstype="nfs" type="nfs"/>
     <rootdisk name="<%= sourcerootdisk %>" fstype="nfs" type="nfs"/>
  </sourcedisks>
  <destdisks>
    <bootdisk name="<%= destbootdisk %>/boot" fstype="nfs" type="nfs"/>
    <rootdisk name="<%= destrootdisk %>" fstype="nfs" type="nfs"/>
  </destdisks>
  <kernel version="<%= kernelrelease %>"/>
</localclone>
